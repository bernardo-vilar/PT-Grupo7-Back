// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int         @id @default(autoincrement())
  nome         String
  email        String      @unique
  senha        String
  departamento String
  curso        String
  foto         Bytes?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  comments     Comment[]   @relation("WrittenBy")
  avaliacoes   Avaliacao[] @relation("WrittenBy")
}

model Comment {
  id          Int        @id @default(autoincrement())
  author      User       @relation("WrittenBy", fields: [authorId], references: [id])
  authorId    Int
  avaliacao   Avaliacao  @relation(fields:[avaliacaoID], references: [id])
  avaliacaoID Int        
  conteudo    String
  createdAt   DateTime   @default(now()) 
  updatedAt   DateTime   @updatedAt      
}

model Professor {
  id           Int        @id @default(autoincrement())
  nome         String
  departamento String
  disciplina   Disciplina @relation(fields: [disciplinaID], references: [id])
  disciplinaID Int
  createdAt    DateTime   @default(now())  
  updatedAt    DateTime   @updatedAt
  avaliacao    Avaliacao[]       
}

model Disciplina {
  id            Int       @id @default(autoincrement())
  nome          String
  createdAt     DateTime  @default(now())  
  updatedAt     DateTime  @updatedAt
  professor     Professor[] // Relacionamento com Professores
  avaliacao     Avaliacao[]   
}

model Avaliacao {
  id           Int        @id @default(autoincrement())
  author       User       @relation("WrittenBy", fields: [authorId], references: [id])
  authorId     Int
  professor    Professor  @relation(fields: [professorID], references:[id])
  professorID  Int
  disciplina   Disciplina @relation(fields: [disciplinaID],references: [id])  
  disciplinaID Int
  conteudo     String
  createdAt    DateTime   @default(now()) 
  updatedAt    DateTime   @updatedAt
  comments     Comment[]
}

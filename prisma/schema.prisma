// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  nome String
  email String @unique
  senha String
  departamento String
  curso String
  foto Bytes
  createdAt DateTime
  updatedAt DateTime
  comments Comment[]
  avaliacoes Avaliacao[]
}

model Comment {
  id Int @id @default(autoincrement())
  author User @relation(fields: [authorId], references: [id])
  authorId Int
  avaliacaoID Int
  conteudo String
  createdAt DateTime
  updatedAt DateTime
}

model Professor {
  id Int @id @default(autoincrement())
  nome String
  departamento String
  disciplinaID Int
  createdAt DateTime
  updatedAt DateTime
}

model Disciplina {
  id Int @id @default(autoincrement())
  nome String
  ProfessoresID String
  CreatedAt DateTime
  UpdatedAt DateTime
}

model Avaliacao {
  id Int @id @default(autoincrement())
  author User @relation(fields: [authorId], references: [id])
  authorId Int
  professorID String
  disciplinaID String
  conteudo String
  CreatedAt DateTime
  UpdatedAt DateTime
}
